<article id="contact">
    <div class="formContainer">
<h1>Edit your car</h1>

<%= form_for @car do |form| %>
    <p> Brand: <%= form.text_field :brand, class: "textfields" %></p>
    <p> Model: <%= form.text_field :model, class: "textfields" %></p>
    <p> Year: <%= form.text_field :year, class: "textfields" %></p>
    <p> Vin: <%= form.text_field :vin, class: "textfields" %></p>
    <p> Mileage: <%= form.text_field :mileage, class: "textfields" %></p>
    <p> Transmission: <%= form.text_field :transmission, class: "textfields" %></p>
    <p> Drive Type: <%= form.text_field :drive_type, class: "textfields" %></p>
    <p> Color: <%= form.text_field :color, class: "textfields" %></p>
    <%# <p> <%= form.hidden_field :user_id, :value => current_user.id  </p> %>
    <ul class="actions">
      <%= form.submit "Edit Car", class: "inputs" %>
    </ul>
<% end %>

<%= link_to('Back to Cars', cars_path) %>

</div>
</article>
